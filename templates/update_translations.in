#!/bin/bash

BASE=${buildout:directory}
I18N=$BASE/bin/i18ndude
SRC=$BASE/src/senaite/clientdivisions
SRC_BIKA=$BASE/src/senaite/clientdivisions
LOCALES=$SRC/locales
EXCLUDE="build *.html"

function die() {
    echo "ERROR: $1"
}

# Check if we have i18n in place
if test ! -x $I18N; then
    echo "You must install i18ndude in your buildout: https://pypi.python.org/pypi/i18ndude"
    echo "See https://github.com/collective/collective.developermanual/blob/master/source/i18n/localization.txt"
    die "i18ndude not installed"
fi

# Check Transifex Installed
function has_tx() {
  TX=$(which tx)
  if test ! -x $TX || test -z $TX; then
     return -1
  else
      return 0
  fi
}

# Transifex Pull Function
function tx_pull() {
    if has_tx; then
        cd $LOCALES
        echo "Transifex Pull"
        tx pull -a -f
    else
        die "Please install the Transifex Client first: $ pip install transifex-client"
    fi
    cd $BASE
}

# Transifex Push Function
function tx_push() {
    if has_tx; then
        cd $LOCALES
        echo "Transifex Push"
        tx push -s -t --skip
    else
        die "Please install the Transifex Client first: $ pip install transifex-client"
    fi
    cd $BASE
}

# Clean all generated .mo files
find $LOCALES -name "*.mo" -delete

# Pull Transifex
tx_pull

# Generate the senaite.clientdivisions Domain
echo "Processing domain: senaite.clientdivisions"
# Flush the english (transifex source language) po files
# If we don't do this, new senaite.clientdivisions-manual.pot translations won't be synced.
echo -n "" > $LOCALES/en/LC_MESSAGES/senaite.clientdivisions.po
# Re-scan the source code for new strings and create a temporary senaite.clientdivisions-senaite.pot
$I18N rebuild-pot --pot $LOCALES/senaite.clientdivisions-senaite.pot --exclude "$EXCLUDE" --create senaite.clientdivisions $SRC_BIKA
# Re-scan the source code for new strings and create a temporary senaite.clientdivisions-tmp.pot
$I18N rebuild-pot --pot $LOCALES/senaite.clientdivisions-tmp.pot --exclude "$EXCLUDE" --create senaite.clientdivisions $SRC
# Merge the manual translations of senaite.clientdivisions-senaite.pot into the temporary senaite.clientdivisions-tmp.pot
$I18N merge --pot $LOCALES/senaite.clientdivisions-tmp.pot --merge $LOCALES/senaite.clientdivisions-senaite.pot
rm $LOCALES/senaite.clientdivisions-senaite.pot
# Merge the manual translations of senaite.clientdivisions-manual.pot into the temporary senaite.clientdivisions-tmp.pot
$I18N merge --pot $LOCALES/senaite.clientdivisions-tmp.pot --merge $LOCALES/senaite.clientdivisions-manual.pot
# Overwrite the existing senaite.clientdivisions.pot
mv $LOCALES/senaite.clientdivisions-tmp.pot $LOCALES/senaite.clientdivisions.pot
# Synchronize all .po files with the new senaite.clientdivisions.pot
$I18N sync --pot $LOCALES/senaite.clientdivisions.pot $LOCALES/*/LC_MESSAGES/senaite.clientdivisions.po
echo "Processing domain: senaite.clientdivisions [DONE]"
echo ""

# Push Transifex
tx_push
